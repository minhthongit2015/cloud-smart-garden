  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Server",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/server/server.js",
      "args": [
        "--ignore",
        "${workspaceFolder}/src/client",
        "--ignore",
        "${workspaceFolder}/src/server/assets",
        "--watch",
        "${workspaceFolder}/src/server",
        "--delay",
        "1.5"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/configs/.env.dev.ini",
      "env": {
        "DEBUG": "cloud:*,-express:*",
        "NODE_ENV": "development",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/test/test.js",
      "args": [
        "--exclude",
        "${workspaceFolder}/src/client",
        "${workspaceFolder}/src/server",
        "-w",
        "${workspaceFolder}/src/test"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "DEBUG": "cloud:*",
        "NODE_ENV": "development"
      }
    }
  ]
}